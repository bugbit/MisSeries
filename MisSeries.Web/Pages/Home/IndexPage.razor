@page "/"
@inject TraktAccountServices TraktAccountSrv
@inject SyncServices SyncSrv

<PageTitle>Index</PageTitle>
<AuthorizeView>
    <Authorized Context="AuthState">
        <h1>Hello, @AuthState.User.Identity?.Name</h1>
        <button class="btn btn-secondary" @onclick="async()=>await SyncSrv.Sync(default)">Sincronizar</button>
        <button class="btn btn-danger" @onclick="async()=>await TraktAccountSrv.LogOffAsync(default)">Desconectar</button>
    </Authorized>
    <NotAuthorized>
        <h1>Hello, world!</h1>

        <button class="btn btn-success" @onclick="TraktAccountSrv.Authorize"> Connect to Trakt</button>
        Welcome to your new app.
    </NotAuthorized>
</AuthorizeView>

<SurveyPrompt Title=" How is Blazor working for you?" />

